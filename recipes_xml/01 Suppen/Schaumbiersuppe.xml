    <fr:recipeName>Schaumbiersuppe</fr:recipeName>
    <fr:recipeKeywords/>
    <fr:recipeIntro/>
    <fr:recipeIngredients>
        <fr:igdtList>
            <fr:igdtListName/>
            <fr:igdtListLine>
