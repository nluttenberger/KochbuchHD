      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 Loth</ns0:igdtQuantity>
        <ns0:igdtName ref="hefe">Hefen</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 Stich</ns0:igdtQuantity>
