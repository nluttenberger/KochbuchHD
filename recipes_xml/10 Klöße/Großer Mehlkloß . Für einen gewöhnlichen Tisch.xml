  <ns0:recipeName>Gro&#223;er Mehlklo&#223; . F&#252;r einen gew&#246;hnlichen Tisch</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 Pfund</ns0:igdtQuantity>
