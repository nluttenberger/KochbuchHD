  <ns0:recipeName>Eine andere Art Kartoffelnkl&#246;&#223;e</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>2 Suppenteller</ns0:igdtQuantity>
        <ns0:igdtName ref="kartoffel">geriebene Kartoffeln</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>4 R&#252;hrl&#246;ffel</ns0:igdtQuantity>
        <ns0:igdtName ref="weizenmehl">Mehl</ns0:igdtName>
