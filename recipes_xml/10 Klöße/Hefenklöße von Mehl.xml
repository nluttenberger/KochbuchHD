<ns0:recipe xmlns:ns0="http://fruschtique.de/ns/recipe" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://fruschtique.de/ns/recipe ../../../tools/recipe.xsd" rcpID="L-26">
  <ns0:meta>
    <ns0:book>KochbuchHD</ns0:book>
    <ns0:chapter>10 Kl&#246;&#223;e</ns0:chapter>
  </ns0:meta>
  <ns0:recipeName>Hefenkl&#246;&#223;e von Mehl</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>2 Pfund</ns0:igdtQuantity>
        <ns0:igdtName ref="weizenmehl">Mehl</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>12 Loth</ns0:igdtQuantity>
        <ns0:igdtName ref="butter">Butter</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>&#189; Pfund</ns0:igdtQuantity>
        <ns0:igdtName ref="sultaninen">Rosinen</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity />
        <ns0:igdtName ref="sultaninen">Corinthen</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>&#189; Ma&#223;</ns0:igdtQuantity>
        <ns0:igdtName ref="milch">Milch</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>4</ns0:igdtQuantity>
        <ns0:igdtName ref="ei">Eiern</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>2 EL</ns0:igdtQuantity>
        <ns0:igdtName ref="hefe">Hefe</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity />
        <ns0:igdtName ref="">Salz</ns0:igdtName>
      </ns0:igdtListLine>
    </ns0:igdtList>
  </ns0:recipeIngredients>
  <ns0:recipeInstructions>
    <ns0:instruction>
      <ns0:instrStepName>Zubereitung</ns0:instrStepName>
      <ns0:instrStepText>Man macht von 2 Pfund Mehl, 12 Loth Butter, &#189; Pfund Rosinen oder Corinthen, &#189; Ma&#223; lauwarmer Milch, drei bis vier Eiern, reichlich 2 L&#246;ffel voll Hefe und Salz einen sch&#246;nen Klo&#223;teig, l&#228;&#223;t ihn 1 Stunde an einem warmen Orte aufgehen und gibt ihn l&#246;ffelweise in kochendes Wasser und Salz . Man l&#228;&#223;t diese Kl&#246;&#223;e &#188; Stunde zugedeckt kochen und richtet sie schnell mit brauner Butter und Obst an. Auf Obst gekocht werden sie auch recht gut. Siehe No. 22. </ns0:instrStepText>
    </ns0:instruction>
  </ns0:recipeInstructions>
