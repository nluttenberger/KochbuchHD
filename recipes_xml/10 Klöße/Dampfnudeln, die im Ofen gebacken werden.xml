    <fr:recipeName>Dampfnudeln, die im Ofen gebacken werden</fr:recipeName>
    <fr:recipeKeywords/>
    <fr:recipeIntro/>
    <fr:recipeIngredients>
        <fr:igdtList>
            <fr:igdtListName>Dampfnudeln</fr:igdtListName>
            <fr:igdtListLine>
                <fr:igdtQuantity>⅛ Maß</fr:igdtQuantity>
                <fr:igdtName ref="milch">Milch</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>¼ Pfund</fr:igdtQuantity>
                <fr:igdtName ref="butter">Butter</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>1 EL</fr:igdtQuantity>
                <fr:igdtName ref="zucker">Zucker</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>4</fr:igdtQuantity>
                <fr:igdtName ref="ei">Eier</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>2 EL</fr:igdtQuantity>
                <fr:igdtName ref="hefe">Hefe</fr:igdtName>
            </fr:igdtListLine>
            <fr:igdtListLine>
                <fr:igdtQuantity>1 Pfund</fr:igdtQuantity>
                <fr:igdtName ref="weizenmehl">Mehl</fr:igdtName>
            </fr:igdtListLine>
        </fr:igdtList>
        <fr:igdtList>
            <fr:igdtListName>Guß</fr:igdtListName>
            <fr:igdtListLine>
