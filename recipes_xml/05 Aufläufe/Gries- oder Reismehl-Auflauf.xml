  <ns0:recipeName>Gries- oder Reismehl-Auflauf</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>&#189; Pfund</ns0:igdtQuantity>
        <ns0:igdtName ref="weizenmehl">Griesmehl</ns0:igdtName>
      </ns0:igdtListLine>
